<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.BikeStore.Controllers.MenuController">
    <children>
        <VBox prefHeight="768.0" prefWidth="1024.0" VBox.vgrow="NEVER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="Customers">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewAllCustomers" text="All Customers"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewNewCustomer" text="New Customer"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Tasks">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewAllTasks" text="All Tasks"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewNewTask" text="New Task"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Bikes">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewAllBikes" text="All Bikes"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewNewBike" text="New Bike"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <AnchorPane fx:id="content" maxHeight="-1.0" maxWidth="840.0" prefHeight="-1.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label alignment="CENTER" layoutX="155.0" layoutY="177.0" style="&#10;"
                               text="Welcome on the BikeStore Application" textAlignment="CENTER" textFill="#9f9f9f"
                               wrapText="false">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
